\setbeamercolor{frametitle}{fg=medalist}
\setbeamercolor{structure}{fg=foundersrock}
 
\setbeamercolor{palette tertiary}{fg=black,bg=bayfog} 
\setbeamercolor{palette quaternary}{fg=black,bg=bayfog} 

\mode<all>
